<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".SignActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/light"
        android:text="FoodDelivery"
        android:textColor="@color/shgray"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/edSignEmail"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="386dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bgshape"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edSignPass"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bgshape"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edSignEmail"
        app:layout_constraintStart_toStartOf="@+id/edSignEmail"
        app:layout_constraintTop_toBottomOf="@+id/edSignEmail" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/light"
        android:text="Почта"
        android:textColor="@color/shgray"
        app:layout_constraintBottom_toTopOf="@+id/edSignEmail"
        app:layout_constraintStart_toStartOf="@+id/edSignEmail" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/light"
        android:text="Пароль"
        android:textColor="@color/shgray"
        app:layout_constraintBottom_toTopOf="@+id/edSignPass"
        app:layout_constraintStart_toStartOf="@+id/edSignPass" />

    <TextView
        android:id="@+id/tvLoginSi"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/btnshape"
        android:backgroundTint="@color/shpurp"
        android:fontFamily="@font/light"
        android:gravity="center"
        android:text="Вход"
        android:textColor="@color/shgray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRegSi"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btnshape"
        android:fontFamily="@font/light"
        android:gravity="center"
        android:text="Регистрация"
        android:textColor="@color/shgray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvLoginSi"
        app:layout_constraintStart_toStartOf="@+id/tvLoginSi"
        app:layout_constraintTop_toBottomOf="@+id/tvLoginSi" />
</androidx.constraintlayout.widget.ConstraintLayout>